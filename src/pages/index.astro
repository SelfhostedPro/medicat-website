---
import Container from "@components/ui/container.astro";
import Features from "@components/home/features.astro";
import Hero from "@components/home/hero.astro";
import Demo from "@components/home/demo.astro";
import Layout from "@layouts/Layout.astro";
import Downloads from "@components/home/downloads.astro";
import Team from "@components/home/team.astro";

import background from "assets/media/background.png";
import BGTile from "assets/media/bgtile_light.png";


const bgmain = `background-image: url(${background.src})`;
const bgTile = `background-image: url(${BGTile.src})`;
---

<Layout title="Medicat USB | Computer Diagnostic and Recovery Toolkit">
  <Container
    bgstyle={bgmain}
    class="mx-auto py-5"
    bgclass="bg-fixed bg-cover bg-no-repeat"
  >
    <Hero />
  </Container>
  <Container
    bgstyle={bgTile}
    class="mx-auto py-5"
    bgclass="bg-fixed bg-cover bg-no-repeat"
  >
    <Features />
  </Container>
  <Container
    bgstyle={bgmain}
    class="mx-auto py-5"
    bgclass="bg-fixed bg-cover bg-no-repeat"
  >
    <Demo />
  </Container>
  <Container
    id="downloads"
    bgstyle={bgTile}
    class="mx-auto py-5"
    bgclass="bg-fixed bg-cover bg-no-repeat scroll-mt-28"
  >
    <Downloads />
  </Container>
  <Container
    id="team"
    bgstyle={bgmain}
    class="mx-auto py-5"
    bgclass="bg-fixed bg-cover bg-no-repeat"
  >
    <Team />
  </Container>
</Layout>
