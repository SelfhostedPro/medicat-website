---
// @ts-ignore
import { Picture } from "@astrojs/image/components";
import Gizmo from "assets/media/Gizmo_150.png";
---

<div class="max-w-6xl mx-auto bg-black/75 rounded shadow-2xl px-8 pt-3 pb-10">
  <div class="flex justify-around items-center">
    <div class="w-24 h-24 animate-wiggle">
      <Picture src={Gizmo} widths={[150]} alt="Gizmo" />
    </div>
    <div class="text-center py-5">
      <h2
        class="text-slate-200 text-4xl lg:text-5xl font-bold lg:tracking-tight"
      >
        DEMOs
      </h2>
      <p class="text-lg mt-4 text-slate-300">See Medicat in action!</p>
    </div>
    <div class="w-24 h-24 animate-wiggleReverse">
      <Picture src={Gizmo} widths={[150]} alt="Gizmo" />
    </div>
  </div>
  <div class="flex flex-wrap gap-8 md:gap-20 items-center justify-center mt-5">
    <div class="flex-auto">
      <h3 class="text-slate-200 text-2xl font-bold mb-4 text-center">
        Showcase
      </h3>
      <iframe
        class="w-full aspect-video"
        src="https://www.youtube.com/embed/mI9fVUfpDYU"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
        allowfullscreen></iframe>
    </div>
    <div class="flex-auto">
      <h3 class="text-slate-200 text-2xl font-bold mb-4 text-center">
        Installer
      </h3>
      <iframe
        class="w-full aspect-video"
        src="https://www.youtube.com/embed/2FHDnegRrGAs4"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
        allowfullscreen></iframe>
    </div>
  </div>
</div>
